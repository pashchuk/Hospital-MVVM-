<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="DesktopApp.MainWindow"
        Title="MainWindow" MinWidth="600" MinHeight="350" 
        Width="800" Height="500">
	<Grid>
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1.5" StartPoint="0.5,0.05">
				<GradientStop Color="{StaticResource MainBackgroundColor}" Offset="0"/>
				<GradientStop Color="White" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
				<TextBlock Style="{StaticResource MainFonts}" Text="User Name:"/>
				<TextBlock x:Name="userName" Style="{StaticResource MainFonts}"/>
			</StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" >
                <TextBlock Style="{StaticResource MenuTextBlockStyle}" Margin="5,0">
                    <Hyperlink Style="{StaticResource MenuHyperlinkStyle}">Add Card</Hyperlink>
                </TextBlock>
                <TextBlock Style="{StaticResource MenuTextBlockStyle}" Margin="5,0">
                    <Hyperlink Style="{StaticResource MenuHyperlinkStyle}">Add Note</Hyperlink>
                </TextBlock>
                <TextBlock Style="{StaticResource MenuTextBlockStyle}" Margin="5,0">
                    <Hyperlink Style="{StaticResource MenuHyperlinkStyle}">Add Session</Hyperlink>
                </TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock Grid.Column="1" Style="{StaticResource MainFonts}" Text="Search" Margin="10,0"/>
                <TextBox x:Name="searchTextBox" Style="{StaticResource OvalTextBoxStyle}" Grid.Column="2" Width="150" Margin="5,0"/>
            </StackPanel>
		</Grid>
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource BorderStyle}"/>
        <Grid>
            
        </Grid>
	</Grid>
</Window>
